@model IEnumerable<InternetShop.Models.Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
   <div class="row pt-4">
        <div class="col-6">
          <h2 class="text-primary">Category</h2>
        </div>

        <div class="col-6 text-end">
           <a class="btn btn-primary " asp-controller="Category" asp-action="Create">
                <i class="fa-solid fa-plus"></i>  Create New Category
           </a>
           
        </div>
   </div>

   <br /><br />
  @{
      if(Model.Count() > 0)
      {
          <table class="table table-bordered table-striped" style="width:100%">
              
          <thead>

                  <tr>
                     <th>
                         Category Name
                     </th>

                        <th>
                            Display Order
                        </th>
                        <th>
                        
                        </th>
                  
                  </tr>

          </thead>
          <tbody>
                   @foreach (var item in Model)
                    {
                        <tr>
                            <td width="50%">@item.Name</td>
                            <td width="30%">@item.DisplayOrder</td>
                            
                            <td class="text-center">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                            </td>

                        </tr>
                    }
          
          </tbody>
          </table>
      }

      else
      {
          <h2>Category is not exists</h2>
      }
  }
</div>
